# Backend environment variables
# Copy to .env and configure.

# PostgreSQL connection (Fly.io will set DATABASE_URL typically)
DATABASE_URL=postgres://user:password@localhost:5432/blep

# Port for Express server
PORT=4000

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:5173

# Rate limiting (per IP) for /api/blep
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_BLEPS=120
